{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "Raven",
  "patterns": [
    { "include": "#comments" },
    {
      "include": "#keywords"
    },
    {
      "include": "#operators"
    },
    {
      "include": "#strings"
    },
    {
      "include": "#numbers"
    },
    {
      "include": "#reserved-keywords"
    },
    { "include": "#expression" }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.double-slash.rv",
          "match": "((?://).*)$"
        },
        {
          "name": "comment.block.rv",
          "begin": "/\\*",
          "end": "\\*/"
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "storage.type.rv",
          "match": "\\b(let|const|fn)\\b"
        }
      ]
    },
    "reserved-keywords": {
      "patterns": [
        {
          "name": "entity.name.function.member.rv",
          "match": "\\b(print|time|bool|null)\\b"
        }
      ]
    },
    "strings": {
      "name": "string.quoted.double.rv",
      "begin": "\"",
      "end": "\"",
      "patterns": [
        {
          "name": "constant.character.escape.rv",
          "match": "\\\\."
        }
      ]
    },
    "expression": {
      "patterns": [
        { "include": "#strings" },
        { "include": "#paren-expression" }
      ]
    },
    "paren-expression": {
      "begin": "\\(",
      "end": "\\)",
      "beginCaptures": {
        "0": { "name": "punctuation.paren.open" }
      },
      "endCaptures": {
        "0": { "name": "punctuation.paren.close" }
      },
      "name": "expression.group",
      "patterns": [{ "include": "#expression" }]
    }
  },
  "scopeName": "source.rv"
}
